extends ../layout

block content
	.container 
		.row
			.col-md-7
				embed(src="#{movie.flash}", allowFullScreen="true", quality="high", width="720", height="600", align="middle", type="application/x-shockwave-flash")
			.col-md-5
				dl.dl-horizotal
					dt name
					dd= movie.title
					dt director
					dd= movie.doctor
					dt country
					dd= movie.country
					dt language
					dd= movie.language
					dt publish 
					dd= movie.year
					dt introduce
					dd= movie.summary	  			