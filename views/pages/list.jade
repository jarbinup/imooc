extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th daingyingmingzi
            th daoyan
            th guojia
            th shangyingnianfen
            //-th lurushjian
            th chakan
            th gengxin
            th shanchu
        tbody
          each item in movies
            tr(class="item-id-#{item._id}")
              td #{item.title}
              td #{item.doctor}
              td #{item.country}
              td #{item.year}
              //-td #{(item.meta.createdAt).format('MM/DD/YYYY')}
              td: a(target="_blank", href="../movie/#{item._id}") chakan
              td: a(target="_blank", href="../admin/update/movie/#{item._id}") xiugai
              td
                button.btn.btn-danger.del(type="button", data-id="#(item._id)") shanchu 